# Server Configuration
PORT=3000
NODE_ENV=development

# Neon PostgreSQL Database
# Get your connection string from: https://console.neon.tech/
# Format: postgresql://username:password@host/database?sslmode=require
DATABASE_URL="postgresql://username:password@ep-xxx.region.neon.tech/neondb?sslmode=require"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# API Keys for external services
IPQUALITYSCORE_API_KEY=your_ipqs_key
IPINFO_TOKEN=your_ipinfo_token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Challenge Settings
CHALLENGE_EXPIRY_SECONDS=300
CHALLENGE_DIFFICULTY=medium

# Tier Limits (requests per month)
FREE_TIER_LIMIT=1000
BASIC_TIER_LIMIT=10000
PRO_TIER_LIMIT=100000
ENTERPRISE_TIER_LIMIT=1000000
